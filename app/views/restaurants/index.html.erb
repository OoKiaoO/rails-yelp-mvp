<h1>Find your favorite Restaurant!</h1>

<div class="container">
  <div class="row justify-content-center">
    <% @restaurants.each do |restaurant| %>
      <div class="card col-sm-3 m-2 p-1" style="width: 18rem;">
        <img class="card-img-top" src="https://picsum.photos/300/200" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=restaurant.name%></h5>
          <p class="card-text">Category: <%= restaurant.category %></p>
          <%= link_to "Check it out!", restaurant_path(restaurant), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>